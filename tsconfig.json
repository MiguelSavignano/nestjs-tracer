{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": ".",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*",
    "examples/**/*"
  ]
}
